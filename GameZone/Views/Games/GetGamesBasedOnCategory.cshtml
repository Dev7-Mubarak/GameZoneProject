@{
    ViewData["Title"] = "Category Games Page";
}

<section class="section teams pb-5">
	<div class="container">

		<div class="row justify-content-center">
			<div class="col-12">
				<div class="col-lg-10 mx-auto text-center">

					<h2 class="section-title mb-0">Action Games</h2>

					<div class="section-border mt-4"></div>
				</div>
			</div>
		</div>


		<div class="container">
			<div class="row mb-n-1">
				<div class="col-8 pl-0">
					<h3 class="pt-x-1">
						Action<span>
							<img src="~/Assets/Images/chevron-right.svg" alt="">
						</span>
					</h3>

				</div>

				<div class="col-4 text-right pr-0">
					<a class="btn btn-primary" href="/Games/GetAll">All Games</a>
