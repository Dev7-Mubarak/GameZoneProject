<!-- reservation pop up -->
<div class="modal applyLoanModal fade" id="reserve" tabindex="-1" aria-labelledby="applyLoanLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content ">
            <div class="modal-header border-bottom-0">
                <h4 class="modal-title" id="exampleModalLabel">Reservation Form</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="#!" method="get">
                    <div class="row">
                        <div class="col-lg-6 mb-4 pb-2">
                            <div class="form-group">
                                <label for="Full-Name" class="form-label">Name</label>
                                <input type="text" class="form-control shadow-none" id="Full-Name" placeholder="Ex: Omer Salem Ba-Ali">
                            </div>
                        </div>
                        <div class="col-lg-6 mb-4 pb-2">
                            <div class="form-group">
                                <label for="Email-address" class="form-label">Email-address</label>
                                <input type="email" class="form-control shadow-none" id="Email-address" placeholder="Ex: anas123@gamil.com">
                            </div>
                        </div>

                        <div class="col-lg-6 mb-4 pb-2">
                            <div class="form-group">
                                <label for="room type">Room Type</label>
                                <select id="room type" class="form-control">
                                    <option>VIP</option>
                                    <option>Big</option>
                                    <option>regular</option>
                                    <option>Samll</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-6 mb-4 pb-2">
                            <div class="form-group">
                                <label for="payment" class="form-label">Payment Method</label>
                                <select id="payment" class="form-control">
                                    <option>Cash</option>
                                    <option>Omgy</option>
                                    <option>Kuraimi</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-12 mb-4">
                            <label>Upload payment receipt </label>
                            <div class="form-group">
                                <input type="file" class="form-control shadow-none" id="loan_repayment">
                            </div>
                            <span>Ignore This If You're Paying In Cash</span>
                        </div>


                        <div class="col-lg-5 mb-4 pb-2">
                            <div class="form-group">
                                <label for="date" class="form-label">Date</label>
                                <input type="date" class="form-control shadow-none" id="Date">
                            </div>
                        </div>
                        <div class="col-lg-4 mb-4 pb-2">
                            <div class="form-group">
                                <label for="Start" class="form-label">Start Hour</label>
                                <input type="number" class="form-control shadow-none" id="Start" placeholder="Start Hour" min="1" max="24">
                            </div>
                        </div>

                        <div class="col-lg-3 mb-4 pb-2">
                            <div class="form-group">
                                <label for="Num-Hours" class="form-label">N-Hours</label>
                                <input type="number" class="form-control shadow-none" id="Num-Hours" min="1" max="8">
                            </div>
                        </div>


                        <div class="col-lg-12">
                            <button type="submit" onclick="alert('Reservation Submitted Successfully')" class="btn btn-primary w-100">Confirm Your Reservation</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


