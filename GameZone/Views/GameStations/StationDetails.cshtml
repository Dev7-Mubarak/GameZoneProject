    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".slider").forEach((slider) => {
                const slides = slider.querySelector(".slides");
                const slideItems = Array.from(slides.children);
                const slideWidth = slides.clientWidth;

                // Clone all slides to create a true infinite loop effect
                slideItems.forEach((slide) => {
                    const clone = slide.cloneNode(true);
                    slides.appendChild(clone);
                });

                let index = 0;
                let autoSlide;

                function updateSlide(position, smooth = true) {
                    slides.scrollTo({ left: position * slideWidth, behavior: smooth ? "smooth" : "auto" });
                }

                function scrollNext() {
                    index++;
                    updateSlide(index);

                    // Reset to the start instantly when reaching the duplicated slides
                    if (index >= slideItems.length) {
                        setTimeout(() => {
                            slides.scrollTo({ left: 0, behavior: "auto" });
                            index = 0;
                        }, 400); // Wait for animation before resetting
                    }
                }

                function scrollPrev() {
                    if (index === 0) {
                        // Jump to the last real slide instantly before moving backwards
                        index = slideItems.length;
                        slides.scrollTo({ left: index * slideWidth, behavior: "auto" });
                    }
                    index--;
                    updateSlide(index);
                }

                //function startAutoSlide() {
                //    autoSlide = setInterval(scrollNext, 3000);
                //}

                function stopAutoSlide() {
                    clearInterval(autoSlide);
                }

                slider.querySelector(".prev").addEventListener("click", function () {
                    stopAutoSlide();
                    scrollPrev();
                    //startAutoSlide();
                });

                slider.querySelector(".next").addEventListener("click", function () {
                    stopAutoSlide();
                    scrollNext();
                    //startAutoSlide();
                });

                // Start auto-slide on load
                //startAutoSlide();
            });
        });

    </script>
