@{
    ViewData["Title"] = "User Reservation Log";
    Layout = "_layout2";
}


<section class="container text-center" style="margin-top: 15vw; margin-bottom: 15vw;">

    <div>
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="col-lg-10 mx-auto text-center">

                    <h2 class="section-title mb-0">Edit Account Details</h2>

                    <div class="section-border mt-4 w-25"></div>
                </div>
            </div>
        </div>

        <div class="modal-body">
            <form action="#!" method="post">
                <div class="row justify-content-around">
                    <h2 class="mb-5">Change your account Info</h2>

                    <div class="col-lg-7 mb-4 pb-2">
                        <div class="form-group">
                            <label for="loan_full_name" class="form-label">FirstName</label>
                            <input type="text" class="form-control shadow-none" id="loan_full_name">
                        </div>
                    </div>
                    <div class="col-lg-7 mb-4 pb-2">
                        <div class="form-group">
                            <label for="loan_full_name" class="form-label">LastName</label>
                            <input type="text" class="form-control shadow-none" id="loan_full_name">
                        </div>
                    </div>
                    <div class="col-lg-7 mb-4 pb-2">
                        <div class="form-group">
                            <label for="loan_email_address" class="form-label">Email address</label>
                            <input type="email" class="form-control shadow-none" id="loan_email_address" placeholder="hsgfkjfs@gamil.com">
                        </div>
                    </div>

                    <div class="col-lg-7 mb-4 pb-2">
                        <div class="form-group">
                            <label for="loan_full_name" class="form-label">Password</label>
                            <input type="password" class="form-control shadow-none" id="loan_full_name">
                        </div>
                    </div>

                    <div class="col-lg-7 mb-4 pb-2">
                        <div class="form-group">
                            <label for="loan_full_name" class="form-label">Confirme Password</label>
                            <input type="password" class="form-control shadow-none" id="loan_full_name">
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <button asp-controller="Home" asp-action="AccountDetails" type="submit" class="btn btn-primary">Save</button>
                    </div>

                </div>
            </form>
        </div>
    </div>



</section>

