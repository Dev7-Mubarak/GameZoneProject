@{
    ViewData["Title"] = "Owner Station Page";
}

<div class="container-fluid px-4">

    <h1 class="text-center text-success mb-5">Station Details</h1>

    <!-- Header Section -->
    <div>
        <!-- Edit Button -->
        <a asp-area="Owner"
           asp-controller="OwnersStations"
           asp-action="Edit"
           class="btn btn-success">
            Edit Station
        </a>
    </div>

    <!-- Main Content -->
    <div class="card shadow-sm mt-4 text-white" style="background-color:#01053c;">
        <div class="card-body">
            <div class="row g-4">
                <!-- Left Column -->
                <div class="col-lg-8">
                    <!-- Station Name -->
                    <div class="mb-4">
                        <h5 class="fw-bold text-success">Name</h5>
                        <p class="m-0">
                            Lucille
                        </p>
                    </div>

                    <!-- Location -->
                    <div class="mb-4">
                        <h5 class="fw-bold text-success">Location</h5>
                        <p class="m-0">
                            Hadramout/Al-Mukalla/Al-Dis
                        </p>
                    </div>

                    <!-- Phone -->
                    <div class="mb-4">
                        <h5 class="fw-bold text-success">Phone Numbers</h5>
                        <p class="m-0">
                            firstnumber &emsp;&emsp; secondnumber
                        </p>
                    </div>

                    <!-- Description -->
                    <div class="mb-4">
                        <h5 class="fw-bold text-success">Description</h5>
                        <p class="m-0">
                            Lucille Game Station is an immersive gaming experience that offers
                            a unique blend of cutting-edge technology and captivating gameplay.
                        </p>
                    </div>

                    <!-- Consoles -->
                    <div class="mb-4">
                        <h5 class="fw-bold text-success">Available Consoles</h5>
                        <div class="mt-2">
                            <img src="~/Assets/Images/playstation.svg"
                                 style="height:40px; margin-right:15px">
                            <img src="~/Assets/Images/xbox.svg"
                                 style="height:40px; margin-right:15px">
                            <img src="~/Assets/Images/nintendo-switch.svg"
                                 style="height:40px; margin-right:15px">
                            <img src="~/Assets/Images/pc-display.svg"
                                 style="height:40px">
                        </div>
                    </div>
                </div>

                <!-- Right Column (Image) -->
                <div class="col-lg-4 text-center">
                    <img src="~/Assets/Images/station1.jpg"
                         class="img-fluid rounded"
                         alt="Station Cover"
                         style="max-height: 450px">
                </div>
            </div>
        </div>
    </div>

</div>