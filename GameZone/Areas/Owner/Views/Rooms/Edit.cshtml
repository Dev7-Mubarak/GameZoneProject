@{
    ViewData["Title"] = "Edit Room Page";
}

<div class="container-fluid">

    <!-- Content Row -->

    <div>

        <form method="get">
            <div class="row">

                <div class="col-lg-6 col-12">

                    <div class="text-success">
                        <h2 class="mb-0">Edit Room</h2>
                    </div>
                    <hr />

                    <div class="form-group mt-3">
                        <label for="loan_full_name" class="form-label">Room Name</label>
                        <input type="text" class="form-control shadow-none" id="loan_full_name">
                    </div>

                    <div class="form-group mt-3">
                        <label for="loan_full_name" class="form-label">Allowd Of people</label>
                        <input type="text" class="form-control shadow-none" id="loan_full_name">
                    </div>

                    <div class="form-group">
                        <label for="loan_full_name" class="form-label">Price In Hour</label>
                        <input type="text" class="form-control shadow-none" id="loan_full_name">
                    </div>

                    <div class="form-group">
                        <label for="loan_full_name" class="form-label">Number of Rooms</label>
                        <input type="number" class="form-control shadow-none" id="loan_full_name">
                    </div>

                    <div class="form-group">
                        <label for="loan_full_name" class="form-label">Primary Image</label>
                        <input type="file" class="form-control shadow-none" id="loan_full_name">
                    </div>

                    <div class="form-group">
                        <label for="loan_full_name" class="form-label">Add More Images</label>
                        <input type="file" class="form-control shadow-none" id="loan_full_name" multiple>
                        <small class="form-text text-muted pt-2">
                            Only jpg jpeg png files are allowd with max
                            size 1MB
                        </small>
                    </div>

                </div>

                <div class="col-lg-6  col-12 justify-content-center pt-5 overflow-hidden">
                    <div style="border: 2px solid white;width: 300px;height: 400px; border-radius: 10px;position: relative;margin-left: 17%;">
                        <img class="cover-previewrounded"
                             style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);"
                             src="~/Assets/image-white.png" alt="Cover" width="60px" height="60px"/>
                    </div>
                </div>


                <a onclick="alert('Saved Successfully')" class="text-white btn btn-success" style="margin-left: 1vw; margin-top: 1vw; width: 70px;"
                   href="#">save</a>
            </div>

        </form>

    </div>
    <!-- End of Main Content -->
</div>