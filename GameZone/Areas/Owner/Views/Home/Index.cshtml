@model GameZone.Areas.Owner.ModelViewOwner.StationDashboardViewModel

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <a asp-area="Owner" asp-controller="OwnersStations" asp-action="Edit" asp-route-id="@Model.Station.Id" class="btn btn-success">
            Edit Station
        </a>
    </div>

    <!-- Statistics Cards -->
    <div class="d-flex justify-content-between gap-4" style="width: 70%;">
        <!-- Pending Reservations -->
        <div class="flex-fill">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Pending Reservations
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.PendingCount
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Completed Reservations -->
        <div class="flex-fill">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Completed Reservations
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.CompletedCount
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Denied Reservations -->
        <div class="flex-fill">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Denied Reservations
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.DeniedCount
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-times-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Station Details Card -->
<div class="card shadow-sm mt-4 text-white" style="background-color:#01053c;">
    <div class="card-body">
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="mb-4">
                    <h5 class="fw-bold text-success">Name</h5>
                    <p class="m-0">@Model.Station.Name</p>
                </div>

                <div class="mb-4">
                    <h5 class="fw-bold text-success">Location</h5>
                    <p class="m-0">@Model.Station.Location</p>
                </div>

                <div class="mb-4">
                    <h5 class="fw-bold text-success">Phone Numbers</h5>
                    <p class="m-0">@Model.Station.PhoneNumber1 &emsp;&emsp; @Model.Station.PhoneNumber2</p>
                </div>

                <div class="mb-4">
                    <h5 class="fw-bold text-success">Description</h5>
                    <p class="m-0">@Model.Station.Descraption</p>
                </div>
            </div>

            <div class="col-lg-4 text-center">
                <img src="@Url.Content("~/Assets/Images/StationsImages/" + Model.Station.Image)"
                     class="img-fluid rounded"
                     alt="Station Cover"
                     style="max-height: 450px">
            </div>
        </div>
    </div>
</div>