@model List<ReservationViewModel>

@{
    ViewData["Title"] = "Reservation Log Page";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

<div class="container-fluid">
    <h1 class="text-center text-success mb-5">Reservation Log</h1>
    <div class="pt-5">
        <table id="reservationTable" class="table table-striped text-center text-white">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Type Of Rooms</th>
                    <th>Date Of Reservation</th>
                    <th>Time Of Reservation</th>
                    <th>Number Of Hours</th>
                    <th>Total Cost</th>
                    <th>Payment Method</th>
                    <th>Status Of Reservation</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reservation in Model)
                {
                    <tr>
                        <td>@reservation.Id</td>
                        <td>@reservation.RoomName</td>
                        <td>@reservation.Date.ToString("yyyy-MM-dd")</td>
                        <td>@reservation.StartHour.ToString("hh:mm tt")</td>
                        <td>@reservation.NumberOfHours Hours</td>
                        <td>@reservation.TotalPrice RY</td>
                        <td>
                            @if (reservation.PaymentMethod == "Transfer")
                            {
                                <a href="~/Assets/0ae5f028-c65d-43de-8872-6340db81e1f2.jpeg" target="_blank" class="text-primary">
                                    Transfer Receipt
                                </a>
                            }
                            else
                            {
                                @reservation.PaymentMethod
                            }
                        </td>
                        <td>@reservation.Status</td>
                        <td>
                            @if (reservation.Status == "Pending" || reservation.Status == "Confirmed")
                            {
                                <button class="btn btn-success btn-sm btnAccept" data-id="@reservation.Id">Accept</button>
                                <button class="btn btn-danger btn-sm btnReject" data-id="@reservation.Id">Reject</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            // Initialize DataTable with all features
            const dataTable = $('#reservationTable').DataTable({
                "paging": true,
                "pageLength": 10,
                "ordering": true,
                "searching": true,
                "columnDefs": [
                    // Make sure date/time columns are sorted properly
                    { "type": "date", "targets": 2 }, // Date column
                    { "type": "date", "targets": 3 }, // Time column
                    { "orderable": false, "targets": [8] } // Disable sorting for Actions column
                ]
            });

            // Rest of your AJAX handling code remains the same...
            function updateRowStatus(row, status) {
                dataTable.cell(row, 7).data(status).draw();
                dataTable.cell(row, 8).data('').draw();
            }

            function handleAction(reservationId, statusText) {
                const row = dataTable.row(`[data-id="${reservationId}"]`);
                updateRowStatus(row.index(), statusText);
            }

            // Accept/Reject button handlers remain unchanged...
        });
    </script>
}