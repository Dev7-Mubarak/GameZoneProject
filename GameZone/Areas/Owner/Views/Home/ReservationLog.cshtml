@using GameZone.Models
@model IEnumerable<Reservation>

@{
    ViewData["Title"] = "Reservation Log Page";
}

<div class="container-fluid">

    <!-- Page Title -->
    <h1 class="text-center text-success mb-5">Reservation Log</h1>

    <div class="pt-5">

        <!-- Reservation Table -->
        <table class="table table-striped text-center text-white">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Type Of Rooms</th>
                    <th>Date Of Reservation</th>
                    <th>Time Of Reservation</th>
                    <th>Number Of Hours</th>
                    <th>Total Cost</th>
                    <th>Payment Method</th>
                    <th>Status Of Reservation</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
               
                @foreach (var reservation in Model)
                {
                    <tr style="height: 4vw">
                        <th>@reservation.Id</th>
                        <td>@reservation.Room.Name</td>
                        <td>@reservation.Date.ToString("yyyy-MM-dd")</td>
                        <td>@reservation.StartHour.ToString("hh:mm tt")</td>
                        <td>@reservation.NumberOfHours Hours</td>
                        <td>@reservation.TotalPrice RY</td>
                        <td>@reservation.PaymentMethod.Name</td>
                        <td>@reservation.Satuts.ToString()</td>
                        <td>
                            <a href="@Url.Action("AcceptedReservation", new { id = reservation.Id })" class="btn btn-success btn-sm" style="padding: 5px 10px; margin: 2px; border-radius: 10px;">Accept</a>
                            <a href="@Url.Action("RejectedReservation", new { id = reservation.Id })" class="btn btn-danger btn-sm" style="padding: 5px 10px; margin: 2px; border-radius: 10px;">Reject</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- /Reservation Table -->
    </div>
</div>
